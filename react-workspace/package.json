{
  "name": "@trimble-oss/modus-react-components",
  "version": "0.1.11-1702",
  "description": "Trimble Modus React Component Library",
  "homepage": "https://modus-web-components.trimble.com/",
  "bugs": {
    "url": "https://github.com/trimble-oss/modus-web-components/issues/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/trimble-oss/modus-web-components"
  },
  "license": "MIT",
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/",
    "README.md"
  ],
  "scripts": {
    "build": "npm run compile",
    "compile": "npm run tsc",
    "tsc": "tsc -p .",
    "test-app:pre-build": "npm pack && node -e \"require('fs-extra').rename(`trimble-oss-modus-react-components-${require('./package.json').version}.tgz`, 'mrc.tgz', function(err) { })\" && copyfiles -f mrc.tgz test-app/ &&  node -e \"require('fs-extra').remove('mrc.tgz')\"",
    "test-app:start": "npm run test-app:pre-build && cd test-app && npm start",
    "test-app:deploy": "npm run test-app:pre-build && cd test-app && npm build"
  },
  "jest": {
    "preset": "ts-jest",
    "setupTestFrameworkScriptFile": "<rootDir>/jest.setup.js",
    "testPathIgnorePatterns": [
      "node_modules",
      "dist"
    ]
  },
  "dependencies": {
    "@trimble-oss/modus-web-components": "^0.1.28"
  },
  "devDependencies": {
    "@types/jest": "23.3.9",
    "@types/node": "^15.12.2",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "copyfiles": "^2.4.1",
    "fs-extra": "^11.1.0",
    "jest": "^28.1.1",
    "jest-dom": "^3.0.2",
    "np": "^7.6.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^4.7.4"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
